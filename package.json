{
  "name": "milkup",
  "version": "1.0.3",
  "description": "A Markdown editor built with Milkup core and Vue.js",
  "keywords": [
    "Markdown",
    "markdown",
    "md",
    "milkup"
  ],
  "license": "MIT",
  "author": "Larry Zhu",
  "repository": {
    "type": "git",
    "url": "https://github.com/auto-plugin/milkup.git"
  },
  "main": "dist-electron/main/index.js",
  "scripts": {
    "build:main": "esbuild src/main/index.ts --bundle --platform=node --external:electron --outfile=dist-electron/main/index.js",
    "build:preload": "esbuild src/preload.ts --bundle --platform=neutral --outfile=dist-electron/preload.js --external:electron --format=cjs",
    "build": "pnpm run build:preload && pnpm run build:main && vite build",
    "dev": "pnpm run build:preload && pnpm run build:main && vite",
    "start:electron": "pnpm run build:preload && pnpm run build:main && electron dist-electron/main/index.js",
    "dist": "pnpm run build && electron-builder",
    "dist:mac-x64": "pnpm run build && electron-builder --mac --x64",
    "dist:mac-arm64": "pnpm run build && electron-builder --mac --arm64",
    "dist:linux-x64": "pnpm run build && electron-builder --linux --x64",
    "dist:linux-arm64": "pnpm run build && electron-builder --linux --arm64",
    "dist:win-x64": "pnpm run build && electron-builder --win --x64",
    "lint": "oxlint . && oxfmt --check .",
    "format": "oxlint --fix . && oxfmt .",
    "prepare": "simple-git-hooks",
    "preinstall": "npx only-allow pnpm",
    "release": "genereleaselog",
    "update:deps": "npx taze -w && pnpm i"
  },
  "dependencies": {
    "@codemirror/autocomplete": "^6.18.7",
    "@codemirror/commands": "^6.10.0",
    "@codemirror/comment": "^0.19.1",
    "@codemirror/lang-css": "^6.3.1",
    "@codemirror/lang-html": "^6.4.11",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/lang-json": "^6.0.2",
    "@codemirror/lang-markdown": "^6.3.4",
    "@codemirror/lang-python": "^6.2.1",
    "@codemirror/lang-vue": "^0.1.3",
    "@codemirror/language": "^6.12.1",
    "@codemirror/lsp-client": "^6.1.2",
    "@codemirror/state": "^6.5.2",
    "@codemirror/view": "^6.38.1",
    "@lezer/highlight": "^1.2.3",
    "@vue/runtime-dom": "^3.5.19",
    "@vueuse/core": "^14.0.0",
    "autodialog.js": "^0.0.9",
    "autotoast.js": "^3.0.3",
    "chokidar": "^4.0.3",
    "codemirror": "^6.0.2",
    "codemirror-lang-mermaid": "^0.5.0",
    "docx": "^9.5.1",
    "electron-updater": "^6.7.3",
    "font-list": "^1.5.1",
    "he": "^1.2.0",
    "katex": "^0.16.28",
    "mdast": "^3.0.0",
    "mermaid": "^11.10.0",
    "mitt": "^3.0.1",
    "nanoid": "^5.1.5",
    "prosemirror-commands": "^1.7.1",
    "prosemirror-dropcursor": "^1.8.2",
    "prosemirror-gapcursor": "^1.4.0",
    "prosemirror-history": "^1.5.0",
    "prosemirror-inputrules": "^1.5.1",
    "prosemirror-keymap": "^1.2.3",
    "prosemirror-model": "^1.25.4",
    "prosemirror-schema-list": "^1.5.1",
    "prosemirror-state": "^1.4.4",
    "prosemirror-transform": "^1.11.0",
    "prosemirror-view": "^1.41.5",
    "rehype-raw": "^7.0.0",
    "rehype-stringify": "^10.0.1",
    "remark-directive": "^4.0.0",
    "remark-flexible-containers": "^1.5.0",
    "remark-html": "^16.0.1",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "remark-stringify": "^11.0.0",
    "unified": "^11.0.5",
    "unist": "^0.0.1",
    "unist-util-visit": "^5.0.0",
    "vditor": "^3.11.2",
    "vite-auto-i18n-plugin": "^1.1.12",
    "vue": "^3.5.19",
    "vue-color": "^3.3.1",
    "vue-draggable-plus": "^0.6.0"
  },
  "devDependencies": {
    "@types/he": "^1.2.3",
    "@types/katex": "^0.16.8",
    "@types/mdast": "^4.0.4",
    "@types/node": "^24.3.0",
    "@types/unist": "^3.0.3",
    "@vitejs/plugin-vue": "^6.0.1",
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "esbuild": "^0.25.9",
    "genereleaselog": "^0.0.5",
    "less": "^4.4.1",
    "oxfmt": "^0.27.0",
    "oxlint": "^1.12.0",
    "picocolors": "^1.1.1",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "vite-plugin-electron": "^0.29.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "node scripts/verify-commit.js"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,json}": [
      "oxlint --fix",
      "oxfmt"
    ]
  },
  "engines": {
    "node": ">=20.17.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.12.1+sha512.f0dda8580f0ee9481c5c79a1d927b9164f2c478e90992ad268bbb2465a736984391d6333d2c327913578b2804af33474ca554ba29c04a8b13060a717675ae3ac",
  "pnpm": {
    "overrides": {
      "@codemirror/state": "^6.5.2",
      "@codemirror/view": "^6.38.1",
      "@lezer/highlight": "^1.2.3",
      "@lezer/common": "^1.5.0",
      "@codemirror/language": "^6.12.1"
    },
    "onlyBuiltDependencies": [
      "electron",
      "electron-winstaller",
      "esbuild",
      "simple-git-hooks"
    ]
  },
  "build": {
    "appId": "com.auto-plugin.milkup",
    "productName": "milkup",
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "icon": "src/assets/icons/milkup",
    "fileAssociations": [
      {
        "ext": "md",
        "name": "Markdown Document",
        "description": "Markdown File",
        "role": "Editor",
        "icon": "src/assets/icons/file"
      }
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "mac": {
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
